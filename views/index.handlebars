<ons-splitter>
  <ons-splitter-side id="menu" side="left" width="220px" collapse swipeable>
    <ons-page>
      <ons-list>
        <ons-list-item onclick="fn.load('insumos.html')" tappable>
          Insumos
        </ons-list-item>
        <ons-list-item onclick="fn.load('recetas.html')" tappable>
          Recetas
        </ons-list-item>
        <ons-list-item onclick="fn.load('productos.html')" tappable>
          Productos
        </ons-list-item>
      </ons-list>
    </ons-page>
  </ons-splitter-side>
  <ons-splitter-content id="content" page="home.html"></ons-splitter-content>
</ons-splitter>

