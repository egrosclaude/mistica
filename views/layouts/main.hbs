<!doctype>
<html>
<head>
<title>Mística</title>
  <link rel="stylesheet" href="https://unpkg.com/onsenui/css/onsenui.css">
  <link rel="stylesheet" href="https://unpkg.com/onsenui/css/onsen-css-components.min.css">
  <script src="https://unpkg.com/onsenui/js/onsenui.min.js"></script>
</head>
<body>
<ons-splitter>
  <ons-splitter-side id="menu" side="left" width="220px" collapse swipeable>
    <ons-page>
      <ons-list> 
        <ons-list-item onclick="fn.load('insumos')" tappable>
          Insumos
        </ons-list-item>
        <ons-list-item onclick="fn.load('recetas')" tappable>
          Recetas
        </ons-list-item>
        <ons-list-item onclick="fn.load('productos')" tappable>
          Productos
        </ons-list-item>
      </ons-list>
    </ons-page>
  </ons-splitter-side>
  <ons-splitter-content id="content" page="home"></ons-splitter-content>
</ons-splitter>
<template id="home">
  <ons-page background="images/mistica.jpg">
    <ons-toolbar>
      <div class="left">
        <ons-toolbar-button onclick="fn.open()">
          <ons-icon icon="md-menu"></ons-icon>
        </ons-toolbar-button>
      </div>
      <div class="center">
        Mística
      </div>
    </ons-toolbar>
  </ons-page>
  {{{body}}}
</template>
<script>
window.fn = {};

window.fn.open = function() {
  var menu = document.getElementById('menu');
  menu.open();
};

window.fn.load = function(page) {
  var content = document.getElementById('content');
  var menu = document.getElementById('menu');
  content.load(page)
    .then(menu.close.bind(menu));
};
</script>
</body>
</html>


